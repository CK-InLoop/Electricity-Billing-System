<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>electricity.billing.system.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>electricity.billing.system.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>NewCustomer</servlet-name>
        <servlet-class>electricity.billing.system.NewCustomer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewCustomer</servlet-name>
        <url-pattern>/newcustomer</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MeterInfo</servlet-name>
        <servlet-class>electricity.billing.system.MeterInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeterInfo</servlet-name>
        <url-pattern>/meterinfo</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CalculateBill</servlet-name>
        <servlet-class>electricity.billing.system.CalculateBill</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculateBill</servlet-name>
        <url-pattern>/calculatebill</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateInfo</servlet-name>
        <servlet-class>electricity.billing.system.UpdateInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateInfo</servlet-name>
        <url-pattern>/updateinfo</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PayBill</servlet-name>
        <servlet-class>electricity.billing.system.PayBill</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayBill</servlet-name>
        <url-pattern>/PayBill</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BillDetails</servlet-name>
        <servlet-class>electricity.billing.system.BillDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillDetails</servlet-name>
        <url-pattern>/BillDetails</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GenerateBill</servlet-name>
        <servlet-class>electricity.billing.system.GenerateBill</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenerateBill</servlet-name>
        <url-pattern>/generatebill</url-pattern>
    </servlet-mapping>
    

</web-app>
